{
  "name": "@tomstech/docflow",
  "version": "1.0.0",
  "description": "Enterprise Documentation & CI/CD Template System",
  "author": "Tom Mangano (TomsTech)",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://github.com/TomsTech/docflow-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TomsTech/docflow-template.git"
  },
  "bugs": {
    "url": "https://github.com/TomsTech/docflow-template/issues"
  },
  "keywords": [
    "documentation",
    "cicd",
    "templates",
    "enterprise",
    "scaffold",
    "generator",
    "adr",
    "runbooks"
  ],
  "type": "module",
  "bin": {
    "docflow": "./bin/docflow.js"
  },
  "main": "src/cli/index.js",
  "files": [
    "bin/",
    "src/",
    "docs/templates/",
    ".github/workflows/docflow-*.yml",
    "docflow.schema.json",
    "docflow.config.json"
