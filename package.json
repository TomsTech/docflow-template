  "scripts": {
    "lint": "eslint src/",
    "test": "node --test ./tests/documentation-validation.test.js",
    "docflow": "node bin/docflow.js",
    "site:dev": "vitepress dev docs",
    "site:build": "vitepress build docs",
    "site:preview": "vitepress preview docs"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.0",
    "ora": "^8.0.0",
    "glob": "^10.3.0",
    "ajv": "^8.12.0",
    "marked": "^11.1.1",
    "puppeteer": "^21.7.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0"
  },
  "peerDependencies": {
    "vitepress": "^1.0.0"
  },
